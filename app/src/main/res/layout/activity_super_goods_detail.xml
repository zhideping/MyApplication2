<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/iv_shangminxiangqing_img"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/a_shangchao_img" />


                    <ImageView
                        android:id="@+id/iv_shangminxiangqing_fanhui"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="-250dp"
                        android:background="@drawable/c_btn_fanhui" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_shangpinxiangqing_shangpinming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="姬娜2粒装"
                    android:textSize="22sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <TextView
                        android:id="@+id/tv_shangpinxiangqing_xinpin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新品上架" />

                    <TextView

                        android:layout_width="1dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="5dp"
                        android:background="#dddddd" />

                    <TextView
                        android:id="@+id/tv_shangpinxiangqing_xinpinguige"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="重量约310g" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shangpinxiangqing_jiage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="￥88.88"
                        android:textColor="#da4692"
                        android:textSize="22sp" />

                    <ImageView
                        android:id="@+id/iv_shangpinxiangqing_jian"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/a_btn_jian" />

                    <TextView
                        android:id="@+id/tv_shangpinxiangqing_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="1"
                        android:textSize="24sp" />

                    <ImageView
                        android:id="@+id/iv_shangpinxiangqing_jia"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/a_btn_jia" />

                </LinearLayout>


                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#dddddd" />

            <TextView
                android:id="@+id/tv_dianming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="希洋便利店（某小区店）" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#dddddd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"

                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shangpinxiangqing_shangpinjieshao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我是本品介绍" />
                    <!--<TextView-->
                    <!--android:id="@+id/tv_shangpinxiangqing_xinpin1"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="新品上架"/>-->
                    <!--<TextView-->

                    <!--android:layout_width="1dp"-->
