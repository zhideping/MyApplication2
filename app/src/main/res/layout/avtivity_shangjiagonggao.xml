<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4183FF"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#4183FF">

            <RelativeLayout
                android:id="@+id/iv_shangjiagonggao_fanhui"
                android:layout_width="40dp"
                android:layout_height="64dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/c_icon_fanhui" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="商家公告"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/et_shangjiagonggao"
        android:layout_width="match_parent"
        android:layout_height="180dp" 
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="请输入商家公告..."
        android:gravity="top"/>
    <TextView
        android:id="@+id/tv_shangjiagonggao_queding"
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/c_c_f_btn_confirm_"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:gravity="center"/>

</LinearLayout>
