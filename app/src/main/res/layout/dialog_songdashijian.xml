<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="@drawable/a_a_bg_beijing">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="请选择最快服务时间" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd">

    </View>

    <com.bjxiyang.zhinengshequ.shop.view.WheelView
        android:id="@+id/re_fuwutime_dialog"
        android:layout_width="match_parent"
        android:layout_height="190dp" >
    </com.bjxiyang.zhinengshequ.shop.view.WheelView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dddddd">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity ="center"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/canal"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="否"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/c_c_d_btn_cancel"/>


        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:background="@drawable/c_c_d_btn_confirm"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="是" />
    </LinearLayout>
</LinearLayout>
